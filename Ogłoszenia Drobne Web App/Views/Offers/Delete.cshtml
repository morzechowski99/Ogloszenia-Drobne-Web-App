@model Ogłoszenia_Drobne_Web_App.Models.Offer

@{
    ViewData["Title"] = "Usuń ofertę";
}



<div class="justify-content-center mt-lg-5">
    <h1 class="text-center mt-lg-5">@ViewData["Title"]</h1>
    <h3 class="text-center">Czy napewno chcesz usunąć tą ofertę?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastModificationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastModificationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ViewCounter)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViewCounter)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>

    <form asp-action="Delete" class="justify-content-center text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Zatwierdź" class="btn btn-danger" /> |
        <a asp-action="MyOffers">Powrót</a>
    </form>
</div>
